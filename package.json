    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
