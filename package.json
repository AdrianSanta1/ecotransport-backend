    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:controllers": "jest controllers",
    "test:services": "jest services",
    "test:entities": "jest entities"
